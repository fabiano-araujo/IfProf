<LinearLayout
    android:id="@+id/llAddDisciplina"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tbAddDisciplinaCd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:theme="@style/TheToobar"
            android:elevation="3dp"
            >
        </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/iptNomeDisciplina"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:paddingBottom="13dp"
                    android:paddingTop="13dp"
                    android:layout_height="wrap_content"
                    >
                    <EditText
                        android:id="@+id/edtNomeDisciplina"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_conponentes"
                        android:textSize="@dimen/text_size"
                        android:inputType="text"
                        android:hint="Nome da disciplina"/>
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/llAddOutraTurma">

                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_conponentes"
                    android:textSize="@dimen/text_size"
                    android:text="Mais uma turma"
                    android:layout_marginTop="70dp"
                    android:id="@+id/btnOutraTurma"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@drawable/pressed_transparent"
                    android:textColor="@color/colorSecond"
                    android:layout_marginBottom="20dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="2dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_conponentes"
                        android:textSize="@dimen/text_size"
                        android:text="Adicionar"
                        android:id="@+id/btnAddDisciplina"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_primary"
                        android:textColor="#fff"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>