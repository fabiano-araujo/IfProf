<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    tools:context="com.example.fabiano.ifprof.ActivityAddQuestao"
    android:id="@+id/llAddQuestao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <include layout="@layout/toolbar"
        android:id="@+id/tbProvas"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
         >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llProva"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Gerar prova"
                    android:layout_marginTop="30dp"
                    android:id="@+id/btnGerarProva"
                    android:background="@drawable/pressed_primary"
                    android:textColor="#fff"
                    android:layout_gravity="bottom"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
