<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"

        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        app:cardMaxElevation="4dp"
        app:cardCornerRadius="3dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:orientation="horizontal"
                android:id="@+id/flSubTitle"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginBottom="-18dp">
                <TextView
                    android:id="@+id/txtSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="sub"
                    />
                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_gravity="right"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="16dp"
                    android:text="date"
                    />
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                >
                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_delete_purple_24dp"/>
                <TextView
                    android:id="@+id/txtNomeTurma"
                    android:textColor="@color/colorSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:singleLine="true"
                    android:layout_marginLeft="16dp"
                    android:text="Nome"
                    android:layout_gravity="left|center_vertical" />
            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtQtdInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:text="NÃºmero de alunos:"
                    />
                <TextView
                    android:id="@+id/txtQtdAlunos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:text="30"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtInfo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:text="Diciplinas:"
                    />
                <TextView
                    android:id="@+id/txtInfo2More"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:layout_marginBottom="10dp"
                    android:text="minhas diciplinas"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/llMoreAvalicoes"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtInfo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:text="Turmas:"
                    />
                <TextView
                    android:id="@+id/txtInfo3More"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:text="minhas turmas"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Ver"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorPurple"
                    android:background="@drawable/button_transparent"
                    android:id="@+id/btnSeeMore" />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Editar"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorPurple"
                    android:background="@drawable/button_transparent"
                    android:id="@+id/btnEditarTurma" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/tbItemInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="0dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>